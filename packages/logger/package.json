{
  "name": "@arkv/logger",
  "version": "0.1.1",
  "description": "Framework-agnostic structured logger with async context, sanitization, and colored output",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "logger",
    "logging",
    "structured",
    "async-context",
    "typescript"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build:esm": "tsc -p tsconfig.build.esm.json",
    "build:cjs": "tsc -p tsconfig.build.cjs.json",
    "build:types": "tsc -p tsconfig.build.types.json",
    "build": "bun run --parallel build:esm build:cjs build:types",
    "postbuild": "echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json && echo '{\"type\":\"module\"}' > dist/esm/package.json",
    "test": "bun test --bail",
    "test:cov": "bun test --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@arkv/colors": "workspace:*",
    "@arkv/shared": "workspace:*"
  },
  "author": {
    "name": "Petar Zarkov",
    "email": "pzarko1@gmail.com",
    "url": "https://github.com/petarzarkov"
  },
  "license": "MIT",
  "homepage": "https://github.com/petarzarkov/arkv/tree/main/packages/logger#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/petarzarkov/arkv",
    "directory": "packages/logger"
  }
}
